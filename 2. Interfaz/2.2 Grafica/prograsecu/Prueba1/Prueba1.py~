#!/usr/bin/python
# -*- coding:utf-8 -*-

import serial
import os
import subprocess
import math
import time
import Gnuplot
from Tkinter import *
import tkMessageBox

class Gramo():
    def Grafica(self):
        bicho = Tk()
        bicho.geometry("810x500+0+0")
        bicho.config(bg="white")
        bicho.title("Interfaz Proyecto Propiedades")
        
 
        
        def Salir():
            exit()

        def Iniciar():
            os.system("cd prograsecu && python Gverificar1.py &")
            exit()



        def Vel_0(self):
            arduino = serial.Serial(self.puerto, 9600)
            time.sleep(2)
            arduino.write('aa')
            print "\n El motor se encuentra detenido"
            arduino.close()
            time.sleep(2)
            self.Vel_Motor()

        def Vel_1(self):
            arduino = serial.Serial(self.puerto, 9600)
            time.sleep(2)
            arduino.write('bb')
            print "\n El motor se encuentra en la velocidad 1"
            arduino.close()
            time.sleep(2)
            self.Vel_Motor()

        def Vel_2(self):
            arduino = serial.Serial(self.puerto, 9600)
            time.sleep(2)
            arduino.write('cc')
            print "\n El motor se encuentra en la velocidad 2"
            arduino.close()
            time.sleep(2)
            self.Vel_Motor()
        
        def Vel_3(self):
            arduino = serial.Serial(self.puerto, 9600)
            time.sleep(2)
            arduino.write('dd')
            print "\n El motor se encuentra en la velocidad 3"
            arduino.close()
            time.sleep(2)
            self.Vel_Motor()

        def Vel_4(self):
            arduino = serial.Serial(self.puerto, 9600)
            time.sleep(2)
            arduino.write('ee')
            print "\n El motor se encuentra en la velocidad 4"
            arduino.close()
            time.sleep(2)
            self.Vel_Motor()

        def Vel_5(self):
            arduino = serial.Serial(self.puerto, 9600)
            time.sleep(2)
            arduino.write('ff')
            print "\n El motor se encuentra en la velocidad 5"
            arduino.close()
            time.sleep(2)
            self.Vel_Motor()

        bicho.mainloop()  




    
    def __init__(self):
        self.Grafica()
        self.__del__()

    def __del__(self):
        print ("PROGRAMA TERMINADO")
        
        
        
modulo  = Gramo()
